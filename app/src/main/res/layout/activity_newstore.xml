<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이름 :"/>

    <EditText
        android:id="@+id/editName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/name"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/cate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="카테고리 :"
        app:layout_constraintTop_toBottomOf="@id/editName"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cate"/>

    <TextView
        android:id="@+id/men"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="메뉴 : "
        app:layout_constraintTop_toBottomOf="@id/spinner"/>

    <EditText
        android:id="@+id/editMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/men" />

    <TextView
        android:id="@+id/ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="주소 : "
        app:layout_constraintTop_toBottomOf="@id/editMenu" />

    <EditText
        android:id="@+id/editAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/ad" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="대표이미지주소 : "
        app:layout_constraintTop_toBottomOf="@id/editAddress"
        android:id="@+id/imaa"/>

    <EditText
        android:id="@+id/editImageAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/imaa"/>

    <TextView
        android:id="@+id/seara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="검색용주소 :"
        app:layout_constraintTop_toBottomOf="@id/editImageAddress"/>

    <EditText
        android:id="@+id/editSearchAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/seara" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가게 추가"
        app:layout_constraintTop_toBottomOf="@id/editSearchAddress"/>
</android.support.constraint.ConstraintLayout>
